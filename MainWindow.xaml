<Window x:Class="Quality_Control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quality_Control"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0">Wybierz port:</Label>
                <ComboBox x:Name="portSelectionBox" Grid.Row="1" Grid.Column="0" ></ComboBox>
                <Button x:Name="openSerialPortButton" Grid.Row="1" Grid.Column="1" Click="openSerialPort">Zatwierdz</Button>
                <Label Grid.Row="2" Grid.Column="0">Wybrany port:</Label>
                <Label x:Name="selectedPort" Grid.Row="2" Grid.Column="1">brak</Label>
                <Label Grid.Row="3" Grid.Column="0">Stan połączenia:</Label>
                <Label x:Name="connectionState" Grid.Row="3" Grid.Column="1">brak</Label>
                <Label Grid.Row="4" Grid.Column="0">komunikacja:</Label>
                <Label x:Name="communicationState" Grid.Row="4" Grid.Column="1">brak</Label>
                <Button Grid.Row="5" Grid.Column="0" Click="getPacket">Pobierz podjencyzny pakiet</Button>
                <Button Grid.Row="5" Grid.Column="1">Włącz komunikacje</Button>
                
            </Grid>
            <Label>Surowy pakiet:</Label>
            <TextBlock x:Name="rawData">{123:23}</TextBlock>



        </StackPanel>

        <StackPanel Grid.Column="1" >

           
            
            <Label>Robot:</Label>

            <Grid Width="300" Height="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Grid.Background>
                    <ImageBrush ImageSource="assets/main_sensors.png"></ImageBrush>
                </Grid.Background>

                <TextBlock Grid.Column="0" Grid.Row="0" Width="40" Height="40" Background="DarkGreen">on</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0" Width="40" Height="40" Background="DarkGreen">on</TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="0" Width="40" Height="40" Background="DarkGreen">on</TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="0" Width="40" Height="40" Background="DarkGreen">on</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" Width="40" Height="40" Background="white">white</TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="3" Width="40" Height="40" Background="white">white</TextBlock>

            </Grid>
                
            
            
            

        </StackPanel>

        <StackPanel Grid.Column="2">
            <Label>Wybierz sposób sterowania:</Label>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" >starter</Label>
                <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" >kontroler</Label>
                <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" >klawiatura</Label>

                <RadioButton Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" ></RadioButton>
                <RadioButton Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" ></RadioButton>
                <RadioButton Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" ></RadioButton>



            </Grid>
            <Label>Sygnał wejściowy:</Label>
            <Label>Silnik 1</Label>
            <ProgressBar Height="20"></ProgressBar>
            <Label>Silnik 2</Label>
            <ProgressBar Height="20"></ProgressBar>
            <Label>Legenda:</Label>

        </StackPanel>
    </Grid>
</Window>
