<Window x:Class="Quality_Control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quality_Control"
        mc:Ignorable="d"
        KeyDown="keyboardHandler"
        Title="Quality Control" Height="550" Width="900"
        Background="Transparent">
    <Border Background="#1e2124">

        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                
                <RowDefinition/>

            </Grid.RowDefinitions>
            

            <StackPanel Grid.Column="0" Grid.Row="1" Margin="10,10">


                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>

                    </Grid.RowDefinitions>
                    
                    

                    <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource Label}">Wybierz port:</Label>
                    <ComboBox x:Name="portSelectionBox" Grid.Row="1" Grid.Column="0" Margin="5,0"></ComboBox>
                    <Button Style="{StaticResource Button}" x:Name="openSerialPortButton" Grid.Row="1" Height="30" Grid.Column="1" Click="openSerialPort" Margin="5,0">Zatwierdz</Button>
                    <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource Label}" >Wybrany port:</Label>
                    <Label x:Name="selectedPort" Grid.Row="2" Grid.Column="1" Style="{StaticResource Label}">brak</Label>
                    <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource Label}">Stan połączenia:</Label>
                    <Label x:Name="connectionState" Grid.Row="3" Grid.Column="1" Style="{StaticResource Label}">brak</Label>
                    <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource Label}">komunikacja:</Label>
                    <Label x:Name="communicationState" Grid.Row="4" Grid.Column="1" Style="{StaticResource Label}">brak</Label>
                    <Button Grid.Row="5" Height="30" Grid.Column="0" Click="getPacket" Margin="5,0">Pobierz podjencyzny pakiet</Button>
                    <Button Grid.Row="5" Height="30" Grid.Column="1" Margin="5,0">Włącz komunikacje</Button>

                </Grid>


            </StackPanel>



            <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,10">




                <Label Style="{StaticResource Label}">Robot:</Label>

                <Grid Width="400" Height="400">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.Background>
                        <ImageBrush ImageSource="assets/main_sensors.png"></ImageBrush>
                    </Grid.Background>

                    <TextBlock x:Name="distanceSensorDisplay1" Grid.Column="0" Grid.Row="0" Width="40" Height="40" Background="DarkGreen" Margin="10,8,25,27" TextAlignment="Center"  >on</TextBlock>
                    <TextBlock x:Name="distanceSensorDisplay2" Grid.Column="1" Grid.Row="0" Width="40" Height="40" Background="DarkGreen" Margin="15,7,20,28" TextAlignment="Center">on</TextBlock>
                    <TextBlock x:Name="distanceSensorDisplay3" Grid.Column="2" Grid.Row="0" Width="40" Height="40" Background="DarkGreen" Margin="22,7,13,28" TextAlignment="Center">on</TextBlock>
                    <TextBlock x:Name="distanceSensorDisplay4" Grid.Column="3" Grid.Row="0" Width="40" Height="40" Background="DarkGreen" Margin="28,8,7,27" TextAlignment="Center">on</TextBlock>
                    <TextBlock x:Name="colorSensorDisplay1" Grid.Column="0" Grid.Row="3" Width="40" Height="40" Background="white" Margin="10,25,25,10" TextAlignment="Center">white</TextBlock>
                    <TextBlock x:Name="colorSensorDisplay2" Grid.Column="3" Grid.Row="3" Width="40" Height="40" Background="white" Margin="28,25,7,10" TextAlignment="Center">white</TextBlock>

                </Grid>

                <Label Style="{StaticResource Label}">Surowy pakiet:</Label>
                <TextBlock x:Name="rawData" TextWrapping="Wrap">{123:23}</TextBlock>

            </StackPanel>

            <StackPanel Grid.Column="2" Grid.Row="1" Margin="10,10">
                <Label Style="{StaticResource Label}">Wybierz sposób sterowania:</Label>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Style="{StaticResource Label}">starter</Label>
                    <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Style="{StaticResource Label}">kontroler</Label>
                    <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" Style="{StaticResource Label}">klawiatura</Label>

                    <RadioButton Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" ></RadioButton>
                    <RadioButton Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" ></RadioButton>
                    <RadioButton Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" ></RadioButton>



                </Grid>
                <Label Style="{StaticResource Label}">Sygnał wejściowy:</Label>
                <Slider Maximum="1" Minimum="0" Value="1" ></Slider>
                <WrapPanel>
                    <Label Style="{StaticResource Label}">Silnik 1</Label>
                    <CheckBox  VerticalAlignment="Center"></CheckBox>
                </WrapPanel>
                <ProgressBar x:Name="motorOutputDisplay1" Height="20" Minimum="0" Maximum="200"></ProgressBar>
                <WrapPanel>
                    <Label Style="{StaticResource Label}">Silnik 2</Label>
                    <CheckBox  VerticalAlignment="Center"></CheckBox>
                </WrapPanel>
                <ProgressBar Height="20"></ProgressBar>

                <StackPanel Margin="5,10">
                    <Button Height="30" Margin="5">Test rozpędzania</Button>
                    <Button Height="30" Margin="5">Test skrętności</Button>


                </StackPanel>


            </StackPanel>
        </Grid>
    </Border>
</Window>
